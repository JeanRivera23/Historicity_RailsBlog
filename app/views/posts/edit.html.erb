<div class="signInContainer">

    <h1 id="sI">Edit Post</h1>

    <div class="form">
        <%= form_for(@post) do |f| %>

          <%= f.label :title, class: "formLabel" %>
          <%= f.text_field :title %> <br> <br>

          <%= f.label :content, class: "formLabel" %>
          <%= f.text_field :content %> <br> <br>

          <%= f.submit "edit", id: "signInBtn", class: "btn" %>

        <% end %>
    </div>
</div>
